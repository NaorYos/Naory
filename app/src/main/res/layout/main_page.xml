<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Welcome Text -->

    <!-- My Goal -->
    <TextView
        android:id="@+id/hello_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="sans-serif-medium"
        android:text="Hello, $name"
        android:textColor="#222222"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/my_goal_button"
        style="@style/Widget.Material3.Button"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:text="My Goal"
        android:textSize="25sp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#673AB7"
        app:cornerRadius="28dp"
        app:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/hello_text"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Start Workout -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_workout_button"
        style="@style/Widget.Material3.Button"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:text="Start Workout"
        android:textSize="25sp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#4CAF50"
        app:cornerRadius="28dp"
        app:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/hello_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- My Profile -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/my_profile_button"
        style="@style/Widget.Material3.Button"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:text="My Profile"
        android:textSize="25sp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#3F51B5"
        app:cornerRadius="28dp"
        app:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/my_goal_button"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- My Friends -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/my_friends_button"
        style="@style/Widget.Material3.Button"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:text="My Friends"
        android:textSize="25sp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#FF5722"
        app:cornerRadius="28dp"
        app:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/start_workout_button"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
